<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/Farm"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/background_image_of_a_farm"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="0dp"

            tools:layout_editor_absoluteY="4dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[4]" />

        <TextView
            android:id="@+id/FairName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="101dp"
            android:text="@string/feria_internacional_ganadera" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/Schedule"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_weight="2"
        android:contentDescription="@string/event_schedule"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/Map"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_weight="1"
        android:contentDescription="@string/event_location"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="367dp"
        tools:srcCompat="@drawable/MapaPrueba" />



</LinearLayout>